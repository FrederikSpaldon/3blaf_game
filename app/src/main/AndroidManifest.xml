<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="a3blaf.a3blafgame">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.NoTitleBar.Fullscreen">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SingleplayerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".MultiplayerActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".Menu"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".FinalActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".AddQuestion"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".CategoryChoose"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".FinalActivityMultiplayer"
            android:label="@string/app_name"
            android:screenOrientation="portrait"/>
    </application>
</manifest>