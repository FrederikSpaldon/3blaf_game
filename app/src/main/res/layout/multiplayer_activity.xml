<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:rotation="180"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:background="#000"
        android:id="@+id/m_player2_layout">


        <Button
            android:id="@+id/m_buttonA1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="A"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/buttonshape"
            android:textColor="#FFF"
            android:textSize="15.0sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/m_buttonB1" />
        <Button
            android:id="@+id/m_buttonB1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="B"
            android:background="@drawable/buttonshape"
            android:textColor="#FFF"
            android:textSize="15.0sp"
            android:layout_above="@+id/m_buttonC1"
            android:layout_alignLeft="@+id/m_buttonA1"
            android:layout_alignStart="@+id/m_buttonA1"
            android:layout_alignRight="@+id/m_buttonA1"
            android:layout_alignEnd="@+id/m_buttonA1" />
        <Button
            android:id="@+id/m_buttonC1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="C"
            android:background="@drawable/buttonshape"
            android:textColor="#FFF"
            android:textSize="15.0sp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/m_buttonB1"
            android:layout_alignStart="@+id/m_buttonB1"
            android:layout_alignRight="@+id/m_buttonB1"
            android:layout_alignEnd="@+id/m_buttonB1" />
        <TextView
            android:id="@+id/txtQuestion_m1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Otázka"
            android:textColor="#FFF"
            android:textSize="20.0sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textColor="#FFF"
            android:id="@+id/textView_skore1"
            android:layout_below="@+id/txtQuestion_m1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:background="#FFF"
        android:id="@+id/m_player1_layout">


        <Button
            android:id="@+id/m_buttonA2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="A"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:background="@drawable/buttonshape"
            android:textColor="#000"
            android:textSize="15.0sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/m_buttonB2" />
        <Button
            android:id="@+id/m_buttonB2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="B"
            android:background="@drawable/buttonshape"
            android:textColor="#000"
            android:textSize="15.0sp"
            android:layout_above="@+id/m_buttonC2"
            android:layout_alignLeft="@+id/m_buttonA2"
            android:layout_alignStart="@+id/m_buttonA2"
            android:layout_alignRight="@+id/m_buttonA2"
            android:layout_alignEnd="@+id/m_buttonA2" />
        <Button
            android:id="@+id/m_buttonC2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="C"
            android:background="@drawable/buttonshape"
            android:textColor="#000"
            android:textSize="15.0sp"
            android:layout_alignParentBottom="true"
            android:layout_alignLeft="@+id/m_buttonB2"
            android:layout_alignStart="@+id/m_buttonB2"
            android:layout_alignRight="@+id/m_buttonB2"
            android:layout_alignEnd="@+id/m_buttonB2" />
        <TextView
            android:id="@+id/txtQuestion_m2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Otázka"
            android:textColor="#000"
            android:textSize="20.0sp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:textColor="#000"
            android:id="@+id/textView_skore2"
            android:layout_below="@+id/txtQuestion_m2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />


    </RelativeLayout>
</LinearLayout>