<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0080ff"
    android:orientation="vertical">


    <Button
        android:id="@+id/bnt_singlePlayer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:gravity="center"
        android:text="Singleplayer"
        android:textColor="#000000"
        android:textSize="25.0sp" />

    <Button
        android:id="@+id/btn_multiPlayer"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:gravity="center"
        android:text="Multiplayer"
        android:textColor="#000000"
        android:textSize="25.0sp" />
    <Button
        android:id="@+id/btn_options"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:gravity="center"
        android:text="Options"
        android:textColor="#000000"
        android:textSize="25.0sp" />
    <Button
        android:id="@+id/btn_newQuestion"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:gravity="center"
        android:text="Add question"
        android:textColor="#000000"
        android:textSize="25.0sp" />

    <Button
        android:id="@+id/btn_sound"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="5dp"
        android:background="#fff"
        android:gravity="center"
        android:text="Sound"
        android:textColor="#000000"
        android:textSize="25.0sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/volumeOn"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/volumeon"
            android:layout_weight="1.0"
            android:visibility="visible"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/volumeOff"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/volumeoff"
            android:layout_weight="1.0"
            android:visibility="gone"/>
    </RelativeLayout>

</LinearLayout>